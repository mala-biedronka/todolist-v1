<%- include("header"); -%>

<div id="heading" class="box">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% for (let i = 0; i < newItems.length ; i++) { %>
    <div class="item">
            <input type="checkbox">
            <p><%= newItems[i] %></p>
    </div>
    <% } %>
        <div class="item">
    <form action="/" method="post">
        <input type="text" name="newListItem" placeholder="new item" autocomplete="off">
        <button type="submit" name="submitButton" value="<%= listTitle %>">+</button>
    </form>
        </div>
</div>

<%- include("footer"); -%>